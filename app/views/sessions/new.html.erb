        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in" %>
      <% end %>

      <p>New User? <%= link_to "Sign up now!", new_path %></p>
    </div>
  </div>
  <% end %>
    
  