<div class="container">
  <h1>Editing photo</h1>
  <hr />
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="one-third column">
    <%= form_for @photo, :url => user_photo_path(@user, @photo), :html => { :multipart => true } do |f| %>
      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, :required => true %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :tag_list, "Tags (separated by commas)" %><br />
        <%= f.text_field :tag_list %>
      </div>
      <div class="field">
        <%= f.label :make_photo_private? %>
        <%= f.check_box :private %>
      </div><br />
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
    <%= link_to 'Back', @user %>
  </div>
 
  <div class="two-thirds column">
    <%= form_for @photo, :url => user_photo_path(@user, @photo), :html => { :multipart => true } do |f| %>
      <p>
        <%= image_tag @photo.photo.url(:edit) %>
      <p>
    <% end %>
  </div> 
  
</div>

