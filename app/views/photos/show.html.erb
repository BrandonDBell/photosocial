<div class="container result">
<center><h1><%= @photo.title %> </h1>
<%= link_to image_tag @photo.photo.url %><br />
<b>Description:</b><br />
<%= @photo.description %><br />
  <br />
  <b>Votes:</b> <%= @photo.reputation_for(:votes).to_i %><br />
	<% if current_user && !current_user.voted_for?(@photo) %>
  <%= link_to "up", vote_user_photo_path(@user, @photo, type: "up"), method: "post" %>
  | <%= link_to "down", vote_user_photo_path(@user, @photo, type: "down"), method: "post" %>
<% end %><br /><br />
<b>Tags:</b><br />
  <%= raw @photo.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
  <br />
  <br />
  <br />
<%= link_to 'Back', @user %> 
<% if current_user?(@user) %>
| <%= link_to 'Edit', edit_user_photo_path(@user, @photo) %></center>
<% end %>
</div>
